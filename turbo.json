{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:setup": {
      "cache": false,
      "persistent": true
    },
    "translate": {
      "cache": false,
      "outputs": ["src/translations/**"]
    },
    "translate:tr": {
      "cache": false,
      "outputs": ["src/translations/tr/**"]
    },
    "translate:check": {
      "cache": false
    },
    "translate:file": {
      "cache": false,
      "outputs": ["src/translations/**"]
    }
  }
}
