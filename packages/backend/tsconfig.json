{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2021", "dom"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "downlevelIteration": true
  },
  "include": [
    "convex/**/*",
    "auth/**/*",
    "src/**/*",
    "convex/actions/**/*"
  ],
  "exclude": [
    "convex/_generated"
  ]
} 